<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_JCRM_FORM_LBL_CONTACT_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_JCRM_FORM_LBL_CONTACT_CREATED_BY"
            description="COM_JCRM_FORM_DESC_CONTACT_CREATED_BY"  /> 

       <field name="last_name" type="text"
                
            label="COM_JCRM_FORM_LBL_CONTACT_LAST_NAME"
            description="COM_JCRM_FORM_DESC_CONTACT_LAST_NAME" 
                
                
                 /> 

       <field name="first_name" type="text"
                
            label="COM_JCRM_FORM_LBL_CONTACT_FIRST_NAME"
            description="COM_JCRM_FORM_DESC_CONTACT_FIRST_NAME" 
                
                
                 /> 

       <field name="organisation" type="text"
                
            label="COM_JCRM_FORM_LBL_CONTACT_ORGANISATION"
            description="COM_JCRM_FORM_DESC_CONTACT_ORGANISATION" 
                
                
                 /> 

       <field name="email" type="text"
                
            label="COM_JCRM_FORM_LBL_CONTACT_EMAIL"
            description="COM_JCRM_FORM_DESC_CONTACT_EMAIL" 
                
                
                 /> 

       <field name="phone" type="text"
                
            label="COM_JCRM_FORM_LBL_CONTACT_PHONE"
            description="COM_JCRM_FORM_DESC_CONTACT_PHONE" 
                
                
                 /> 

       <field name="jcard" type="textarea"
                
            label="COM_JCRM_FORM_LBL_CONTACT_JCARD"
            description="COM_JCRM_FORM_DESC_CONTACT_JCARD" 
                
                
                
            cols="100"
            rows="8"
            option_on="Yes"
            option_off="Yes" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" /> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_jcrm"
                            section="contact"
                        />

	</fieldset>

</form>
