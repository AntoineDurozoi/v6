<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8.13" type="plugin" group="authentication">
	<name>Authentication - OAuth 2 CCI Connect</name>
	<author>Hugo Moracchini</author>
	<creationDate>November 2018</creationDate>
	<copyright>(C) 2019 eMundus All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>dev@emundus.fr</authorEmail>
	<authorUrl>emundus.fr</authorUrl>
	<version>3.8.13</version>
	<description>PLG_USER_JOOMLA_XML_DESCRIPTION</description>
	<files>
		<filename plugin="emundus_oauth2_cci">emundus_oauth2_cci.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_authentication_emundus_oauth2_cci.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_authentication_emundus_oauth2_cci.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="clientid" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTID_LABEL" description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTID_DESC"/>
				<field name="clientsecret" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTSECRET_LABEL" description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTSECRET_DESC"/>
				<field name="scopes" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_SCOPES_LABEL" description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_SCOPES_DESC" default="openid" />
				<field name="authurl" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_AUTHURL_LABEL" description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_AUTHURL_DESC"/>
				<field name="tokenurl" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TOKENURL_LABEL" description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TOKENURL_DESC"/>
				<field name="redirecturl" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_REDIRECTURL_LABEL" description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_REDIRECTURL_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>