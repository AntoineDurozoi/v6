<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" label="Data" name="plg-databasejoin-simple">
		
		<field name="join_conn_id"
			label="PLG_ELEMENT_DBJOIN_CONNECTION"
			type="connections"/> 
			
		<field name="join_db_name"
			label="PLG_ELEMENT_DBJOIN_TABLE_LABEL"
			observe="params_join_conn_id"
			key="name"
			type="tables"/>
			
		<field name="join_key_column"
			type="listfields"
			highlightpk="true"
			connection="params_join_conn_id"
			description="PLG_ELEMENT_DBJOIN_JOIN_KEY_DESC"
			label="PLG_ELEMENT_DBJOIN_JOIN_KEY_LABEL"
			table="params_join_db_name"/>
			
		<field name="join_val_column"
			type="listfields"
			connection="params_join_conn_id"
			description="PLG_ELEMENT_DBJOIN_JOIN_LABEL_DESC"
			label="PLG_ELEMENT_DBJOIN_JOIN_LABEL_LABEL"
			table="params_join_db_name" />
			
		<field name="join_val_column_concat"
			type="textarea"
			cols="40" rows="8"
			description="PLG_ELEMENT_DBJOIN_OR_CONCAT_LABEL_DESC"
			label="PLG_ELEMENT_DBJOIN_OR_CONCAT_LABEL_LABEL" />
			
		<field name="database_join_where_sql"
			type="textarea"
			cols="40" rows="8"
			description="PLG_ELEMENT_DBJOIN_WHERE_STATEMENT_DESC"
			label="PLG_ELEMENT_DBJOIN_WHERE_STATEMENT_LABEL" />
			
		<field name="database_join_where_access"
			type="accesslevel"
			default="1"
			description="PLG_ELEMENT_DBJOIN_JOIN_WHERE_ACCESS_DESC"
			label="PLG_ELEMENT_DBJOIN_JOIN_WHERE_ACCESS_LABEL" />
			
		<field name="database_join_where_when"
			type="list"
			default="3"
			description="PLG_ELEMENT_DBJOIN_JOIN_WHERE_WHEN_DESC"
			label="PLG_ELEMENT_DBJOIN_JOIN_WHERE_WHEN_LABEL">
				<option value="1">PLG_ELEMENT_DBJOIN_NEW</option>
				<option value="2">PLG_ELEMENT_DBJOIN_EDIT</option>
				<option value="3">PLG_ELEMENT_DBJOIN_BOTH</option>
		</field>
		
		<field name="database_join_join_sql"
			type="textarea"
			cols="40" rows="8"
			description="PLG_ELEMENT_DBJOIN_JOIN_STATEMENT_DESC"
			label="PLG_ELEMENT_DBJOIN_JOIN_STATEMENT_LABEL" />
			
		</fieldset>
		<fieldset label="autocomplete" name="plg-element-Autocomplete">	
			<field default="0" label="HIDDEN" name="hidden" type="radio">
				<option value="0">No</option>
				<option value="1">YES</option>
			</field>
			<field name="width" type="width" label="Width" />
			<field default="0" label="Eval" name="eval" type="radio">
				<option value="0">No</option>
				<option value="1">YES</option>
			</field>
			<field name="default" type="default" default="" label="Default" size = "60" />

			<field name="ac_callback_id" size="60" type="text" default="" label="CALLBACK_ID" description="CALLBACK_ID_DESC" />
			<field name="ac_search_value_id" size="60" type="text" default="" label="SEARCH_VALUE_ID" description="SEARCH_VALUE_ID_DESC" />
			<field name="ac_search_field" size="60" type="text" default="" label="SEARCH_FIELD" description="SEARCH_FIELD_DESC" />
			<field name="ac_info_field" size="60" type="text" default="" label="INFO_FIELD" description="INFO_FIELD_DESC" />
			<field name="ac_info_cible_id" size="60" type="text" default="" label="INFO_CIBLE_ID" description="INFO_CIBLE_ID_DESC" />
			<field name="ac_format_string" type="text" default="" label="FORMATSTRING" description="FORMATSTRINGDESC" />	
		</fieldset>
	</fields>
</form>