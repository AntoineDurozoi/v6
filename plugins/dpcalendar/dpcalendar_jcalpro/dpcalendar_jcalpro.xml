				</field>
				<field name="cache_time" type="text" default="900"
					label="PLG_DPCALENDAR_JCALPRO_FIELD_CACHING_TIME_LABEL" description="PLG_DPCALENDAR_JCALPRO_FIELD_CACHING_TIME_DESC" />
			</fieldset>
