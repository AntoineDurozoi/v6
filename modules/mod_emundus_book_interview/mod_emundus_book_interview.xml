        <authorUrl>www.emundus.fr</authorUrl>
        <version>6.0</version>
		<description>MOD_EM_BOOK_INTERVIEW_XML_DESCRIPTION</description>
		<files>
			<filename>mod_emundus_book_interview.xml</filename>
			<filename module="mod_emundus_book_interview">mod_emundus_book_interview.php</filename>
			<filename>index.html</filename>
			<folder>tmpl</folder>
			<folder>language</folder>
		</files>
		<config>
			<fields name="params">
				<fieldset name="basic" label="Options">``
					<field name="skype" type="checkbox" label="SKYPE_PARAM" description="SKYPE_PARAM_DESC" value="1" default="0"/>
					<field name="facetime" type="checkbox" label="FACETIME_PARAM" description="FACETIME_PARAM_DESC" value="1" default="0"/>
					<field name="whatsapp" type="checkbox" label="WHATSAPP_PARAM" description="WHATSAPP_PARAM_DESC" value="1" default="0"/>
					<field name="google" type="checkbox" label="GOOGLE_PARAM" description="GOOGLE_PARAM_DESC" value="1" default="0"/>
					<field type="list" name="mod_em_book_interview_layout" default="" label="MOD_EM_BOOK_INTERVIEW_LAYOUT" description="MOD_EM_BOOK_INTERVIEW_LAYOUT_DESC">
                        <option value="default">EM_MODAL</option>
                        <option value="form">EM_FORM</option>
                    </field>
				</fieldset>
				<fieldset name="advanced">
					<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				</fieldset>
			</fields>
		</config>
	</extension>